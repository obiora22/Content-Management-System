<% if !flash[:notice].blank? %>
  <div class="notice">
  	<%= flash[:notice] %>
  </div>
  <% end %>
<%= link_to("<< Back to List", {action: :index}, :class => 'back-link')%> 

<!-- Non-resource oriented -->

<div class="pages show">
	<h2>Show Page</h2>
	<table summary="page detail view">
		<tr>
			<th>Name</th>
			<td><%= @page.name %></td>
		</tr>
		<tr>
			<th>Permalink</th>
			<td><%= @page.permalink%></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @page.position %></td>
		</tr>
		<tr>
			<th>Visible</th>
			<td><%= @page.visible ? 'Yes' : 'No'  %></td>
		</tr>
		<tr>
			<th>SubjectId</th>
			<td><%= @page.subject_id %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @page.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @page.updated_at %></td>
		</tr>
	</table>
</div>